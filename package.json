{
  "name": "help-my-mac-is-an-introvert",
  "version": "0.1.0",
  "description": "Take a break every 20 minutes! For macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ignore-path .gitignore . && prettier --config .prettierrc.json --ignore-path .gitignore --check \"**/*.{js,json,ts,md,html}\"",
    "fix": "eslint --ignore-path .gitignore --fix . && prettier --config .prettierrc.json --ignore-path .gitignore --write \"**/*.{js,json,ts,md,html}\"",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "sign": "electron-osx-sign ./out/help-my-mac-is-an-introvert.app --identity='Apple Development' --provision-profile=./Super_Cozy_Introvert_Party_for_MacBook_Pro_16.provisionprofile",
    "prepare": "husky install"
  },
  "author": "Jared Tong <tongrhj@users.noreply.github.com>",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tongrhj/help-my-mac-is-an-introvert.git"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.57",
    "@electron-forge/maker-deb": "6.0.0-beta.57",
    "@electron-forge/maker-rpm": "6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "6.0.0-beta.57",
    "@electron-forge/maker-zip": "6.0.0-beta.57",
    "electron": "^13.0.1",
    "electron-osx-sign": "^0.5.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "update-electron-app": "https://github.com/tongrhj/update-electron-app.git"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Help! My Mac is an Introvert",
        "appCopyright": "Jared Tong",
        "icon": "assets/MyIcon.icns",
        "ignore": [
          ".+.test.js",
          ".*.env",
          ".husky",
          ".eslintcache",
          ".gitignore",
          "README.md",
          ".*.provisionprofile"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "help-my-mac-is-an-introvert"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
